<%- layout('layouts/boilerplate.ejs') %>

<main class="error-page">
  <div class="error-container">
    <!-- Error Header -->
    <div class="error-header">
      <div class="error-illustration">
        <div class="error-code"><%= statusCode || '500' %></div>
      </div>

      <h1 class="error-title">
        <% if (statusCode === 404) { %> Page Not Found <% } else if (statusCode
        === 500) { %> Server Error <% } else { %> Something Went Wrong <% } %>
      </h1>

      <p class="error-subtitle">
        <%= message || 'The page you are looking for does not exist.' %>
      </p>
    </div>

    <!-- Error Actions -->
    <div class="error-actions">
      <div class="error-buttons">
        <a href="/post" class="btn btn-primary error-btn">
          <i class="fas fa-home btn-icon"></i>
          Go Home
        </a>
        <button onclick="history.back()" class="btn btn-secondary error-btn">
          <i class="fas fa-arrow-left btn-icon"></i>
          Go Back
        </button>
      </div>
    </div>

    <!-- Helpful Links -->
    <div class="error-help">
      <p class="help-text">You might want to try:</p>
      <div class="help-links">
        <a href="/post" class="help-link">
          <i class="fas fa-images"></i>
          Browse Posts
        </a>
        <a href="/user/signup" class="help-link">
          <i class="fas fa-user-plus"></i>
          Sign Up
        </a>
        <a href="/privacy" class="help-link">
          <i class="fas fa-shield-alt"></i>
          Privacy Policy
        </a>
      </div>
    </div>
  </div>
</main>
