<%- layout('layouts/boilerplate.ejs') %>

<main class="user-page">
  <div class="user-container">
    <div class="user-header">
      <div class="user-avatar">
        <div class="avatar-circle">
          <span class="avatar-initial"
            ><%= currUser.username.charAt(0).toUpperCase() %></span
          >
        </div>
      </div>

      <div class="user-info">
        <h1 class="user-username">@<%= currUser.username %></h1>
      </div>

      <% if (currUser) { %>
      <div class="user-actions">
        <a href="/user/edit" class="btn btn-edit user-edit-btn">
          <svg class="edit-icon" viewBox="0 0 20 20" fill="currentColor">
            <path
              d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
            />
          </svg>
          Edit Profile
        </a>
      </div>
      <% } %>
    </div>

    <div class="user-details">
      <div class="detail-section">
        <h2 class="section-title">Account Information</h2>
        <div class="detail-grid">
          <div class="detail-item">
            <span class="detail-label">Username:</span>
            <span class="detail-value">@<%= currUser.username %></span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Email:</span>
            <span class="detail-value"><%= currUser.email %></span>
          </div>
          <% if (currUser.age) { %>
          <div class="detail-item">
            <span class="detail-label">Age:</span>
            <span class="detail-value"><%= currUser.age %> years old</span>
          </div>
          <% } %>
        </div>
      </div>

      <div class="detail-section">
        <h2 class="section-title">Activity Summary</h2>
        <div class="activity-summary">
          <p class="activity-text">
            <strong><%= currUser.username %></strong> has contributed
            <strong><%= userPosts.length %></strong> shots to the Dribbble
            community.
          </p>
          <% if (userPosts.length === 0) { %>
          <p class="activity-empty">
            No shots uploaded yet. Start sharing your creative work!
          </p>
          <% } %>
        </div>
      </div>
    </div>

    <div class="posts-section">
      <h2 class="section-title">
        <i class="fa-solid fa-images"></i>
        My Posts (<%= userPosts.length %>)
      </h2>

      <% if (userPosts.length > 0) { %>
      <div class="posts-grid">
        <% userPosts.forEach(function(post) { %>
        <div class="post-card">
          <a href="/post/<%= post.id %>">
            <div class="post-image-wrapper">
              <img
                class="post-image"
                src="<%= post.image %>"
                alt="<%= post.title %>"
              />
            </div>
          </a>

          <div class="post-content">
            <h3 class="post-title"><%= post.title %></h3>
            <% if (post.description && post.description.length > 0) { %>
            <p class="post-description">
              <%= post.description.length > 100 ? post.description.substring(0,
              100) + '...' : post.description %>
            </p>
            <% } %>

            <div class="post-meta">
              <div class="post-date">
                <i class="fa-regular fa-calendar"></i>
                <%= new Date(post.createdAt).toLocaleDateString() %>
              </div>

              <div class="post-stats">
                <div class="post-stat">
                  <i class="fa-solid fa-heart" style="color: #ef4444"></i>
                  <span><%= post.hearts || 0 %></span>
                </div>
                <div class="post-stat">
                  <i class="fa-solid fa-thumbs-up" style="color: #123ac0"></i>
                  <span><%= post.likes || 0 %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <div class="empty-state">
        <div class="empty-state-icon">
          <i class="fa-regular fa-images"></i>
        </div>
        <h3 class="empty-state-title">No Posts yet</h3>
        <p class="empty-state-text">
          You haven't uploaded any shots yet. Share your creative work with the
          Dribbble community!
        </p>
        <a href="/post/new" class="create-first-post-btn">
          <i class="fa-solid fa-plus"></i>
          Create your first shot
        </a>
      </div>
      <% } %>
    </div>
  </div>
</main>
