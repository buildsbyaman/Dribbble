<%- layout("layouts/boilerplate.ejs") %>

<section class="hero-section">
  <div class="hero-content">
    <h1 class="hero-title">Discover the world's top designers</h1>
  </div>
</section>

<section class="subtitle-section">
  <h2 class="subtitle">
    Explore work from the most talented and accomplished designers ready to take
    on your next project
  </h2>
</section>

<section class="search-section">
  <div class="search-container">
    <div class="search-input-wrapper">
      <input
        class="search-input"
        type="text"
        placeholder="What are you looking for?"
      />
    </div>
    <div class="search-button-wrapper">
      <button class="search-button">
        <img class="search-icon" src="/images/search.png" alt="" />
      </button>
    </div>
  </div>
</section>

<section class="trending-section">
  <p class="trending-label">Trending searches</p>
  <div class="trending-tags">
    <span class="trending-tag">UI/UX</span>
    <span class="trending-tag">Minimalist Design</span>
    <span class="trending-tag">Dark Mode</span>
    <span class="trending-tag">3D Illustration</span>
    <span class="trending-tag">Microinteractions</span>
  </div>
</section>

<section class="gallery-section">
  <div class="gallery-grid">
    <% postData.forEach(function(post, index) { %>
      <div class="gallery-item">
        <div class="gallery-image-wrapper">
          <a href="/post/<%= post.id %>">
            <img
              class="gallery-image"
              src="<%= post.image %>"
              alt="<%= post.title %>"
            />
          </a>
        </div>

        <div class="gallery-content">
          <div class="gallery-header">
            <div class="post-info">
              <h3 class="post-title"><%= post.title %></h3>
              <% if(post.author) { %>
              <div class="post-author">
                <span class="author-avatar">
                  <%= post.author.username.charAt(0).toUpperCase() %>
                </span>
                <span class="author-name"><%= post.author.username %></span>
              </div>
              <% } %>
            </div>

            <div class="post-actions">
              <% if (currUser) { %>
                <% 
                  const isHearted = userHearts.includes(post._id.toString()); 
                  const isLiked = userLikes.includes(post._id.toString()); 
                %>

                <div
                  class="stat-badge heart-badge <%= isHearted ? 'liked' : '' %>"
                  onclick="toggleHeartHome('<%= post._id %>', this)"
                >
                  <i
                    class="<%= isHearted ? 'fa-solid' : 'fa-regular' %> fa-heart stat-icon-hearts"
                    <% if (isHearted) { %> style="color: #ef4444;" <% } %>
                  ></i>
                  <span class="stat-number"><%= post.hearts || 0 %></span>
                </div>

                <div
                  class="stat-badge thumbs-badge <%= isLiked ? 'liked' : '' %>"
                  onclick="toggleLikeHome('<%= post._id %>', this)"
                >
                  <i
                    class="<%= isLiked ? 'fa-solid' : 'fa-regular' %> fa-thumbs-up stat-icon-thumbs"
                    <% if (isLiked) { %> style="color: #123ac0;" <% } %>
                  ></i>
                  <span class="stat-number"><%= post.likes || 0 %></span>
                </div>
              <% } else { %>
                <div class="stat-badge heart-badge" onclick="showLoginMessage()">
                  <i class="fa-regular fa-heart stat-icon-hearts"></i>
                  <span class="stat-number"><%= post.hearts || 0 %></span>
                </div>
                <div class="stat-badge thumbs-badge" onclick="showLoginMessage()">
                  <i class="fa-regular fa-thumbs-up stat-icon-thumbs"></i>
                  <span class="stat-number"><%= post.likes || 0 %></span>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
